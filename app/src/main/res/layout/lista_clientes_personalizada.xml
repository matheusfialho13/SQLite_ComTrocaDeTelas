<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lista_clientes_personalizada_imagem"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="231dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/lista_clientes_personalizada_imagem"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/lista_clientes_personalizada_nome"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Nome"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/lista_clientes_personalizada_idade"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Idade"
            android:textSize="20dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>